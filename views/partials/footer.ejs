    <footer>
        <div class="footer-content">
            <div class="social-links">
                <% if (profile.linkedin) { %><a href="<%= profile.linkedin %>" target="_blank">LinkedIn</a><% } %>
                <% if (profile.github) { %><a href="<%= profile.github %>" target="_blank">GitHub</a><% } %>
                <% if (profile.instagram) { %><a href="<%= profile.instagram %>" target="_blank">Instagram</a><% } %>
                <% if (profile.youtube) { %><a href="<%= profile.youtube %>" target="_blank">YouTube</a><% } %>
            </div>
            <p>&copy; <%= new Date().getFullYear() %> <%= profile.name %>. All rights reserved.</p>
        </div>
    </footer>

    <script>
        // Smooth scroll for navigation links
        document.querySelectorAll('a[href^="#"]').forEach(anchor => {
            anchor.addEventListener('click', function (e) {
                e.preventDefault();
                const target = document.querySelector(this.getAttribute('href'));
                if (target) {
                    target.scrollIntoView({
                        behavior: 'smooth',
                        block: 'start'
                    });
                }
            });
        });

        // Add header shadow on scroll
        window.addEventListener('scroll', () => {
            const header = document.querySelector('header');
            if (window.scrollY > 50) {
                header.style.boxShadow = '0 2px 20px rgba(0, 0, 0, 0.1)';
            } else {
                header.style.boxShadow = 'none';
            }
        });
    </script>
</body>
</html>
