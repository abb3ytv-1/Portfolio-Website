<% const page = 'about'; %>
<%- include('../partials/header', { profile, page }) %>

<section style="padding-top: 8rem;">
    <div class="container" style="max-width: 900px; margin: 0 auto;">
        <h1 class="section-title">About Me</h1>
        <p class="section-subtitle">Get to know more about my journey and expertise</p>
        
        <div class="about-content" style="display:flex; flex-wrap:wrap; gap:2rem; margin-bottom: 4rem;">
            <div class="about-text" style="flex:1; min-width:280px;">
                <% profile.bio.forEach(paragraph => { %>
                    <p style="line-height:1.8; margin-bottom:1rem;"><%= paragraph %></p>
                <% }); %>
            </div>
            <div class="about-image" style="flex:1; min-width:280px;">
                <% if (profile.image) { %>
                    <img src="<%= profile.image.startsWith('/') ? profile.image : '/images/' + profile.image %>" 
                         alt="<%= profile.name %>" 
                         style="width:100%; border-radius:12px;">
                <% } else { %>
                    <div style="width:100%; height:300px; background: linear-gradient(135deg, #667eea 0%, #764ba2 100%); border-radius:12px; display:flex; align-items:center; justify-content:center; color:white;">
                        Your Image Here
                    </div>
                <% } %>
            </div>
        </div>
        
        <h2 class="section-title" style="margin-bottom: 2rem;">Skills & Expertise</h2>
        <div class="skills-grid" style="display:flex; flex-wrap:wrap; gap:1.5rem;">
            <% skills.forEach(skillCategory => { %>
                <div class="skill-category" style="flex:1; min-width:200px; background:#f9f9f9; padding:1rem; border-radius:10px;">
                    <h3 style="margin-bottom:0.8rem;"><%= skillCategory.category %></h3>
                    <div class="skill-tags" style="display:flex; flex-wrap:wrap; gap:0.5rem;">
                        <% skillCategory.items.forEach(skill => { %>
                            <span class="skill-tag" style="background:var(--accent); color:white; padding:0.4rem 0.8rem; border-radius:6px; font-size:0.9rem;"><%= skill %></span>
                        <% }); %>
                    </div>
                </div>
            <% }); %>
        </div>
    </div>
</section>

<%- include('../partials/footer', { profile }) %>