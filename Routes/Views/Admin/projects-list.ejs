<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %></title>
    <link href="https://fonts.googleapis.com/css2?family=Playfair+Display:wght@400;600;700&family=Work+Sans:wght@300;400;500;600&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="/css/admin.css">
</head>
<body>
    <div class="admin-layout">
        <aside class="admin-sidebar">
            <h2>Portfolio CMS</h2>
            <ul class="admin-nav">
                <li><a href="/admin">Dashboard</a></li>
                <li><a href="/admin/profile">Edit Profile</a></li>
                <li><a href="/admin/skills">Edit Skills</a></li>
                <li><a href="/admin/projects" class="active">Manage Projects</a></li>
                <li><a href="/" target="_blank">View Site</a></li>
                <li><a href="/admin/logout">Logout</a></li>
            </ul>
        </aside>
        
        <main class="admin-main">
            <div class="admin-header">
                <h1>Manage Projects</h1>
                <a href="/admin/projects/add" class="btn btn-success">Add New Project</a>
            </div>
            
            <div class="admin-content">
                <table class="admin-table">
                    <thead>
                        <tr>
                            <th>Title</th>
                            <th>Type</th>
                            <th>Technologies</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% projects.forEach(project => { %>
                            <tr>
                                <td><strong><%= project.title %></strong></td>
                                <td><%= project.type %></td>
                                <td><%= project.technologies.slice(0, 3).join(', ') %><%= project.technologies.length > 3 ? '...' : '' %></td>
                                <td class="table-actions">
                                    <a href="/admin/projects/edit/<%= project.id %>" class="btn btn-sm btn-secondary">Edit</a>
                                    <form method="POST" action="/admin/projects/delete/<%= project.id %>" style="display: inline;" onsubmit="return confirm('Are you sure you want to delete this project?');">
                                        <button type="submit" class="btn btn-sm btn-danger">Delete</button>
                                    </form>
                                </td>
                            </tr>
                        <% }); %>
                    </tbody>
                </table>
            </div>
        </main>
    </div>
</body>
</html>
